<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.shemsh.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/servicesFragment"
        android:name="com.example.shemsh.services.ServicesFragment"
        android:label="fragment_services"
        tools:layout="@layout/fragment_services">
        <action
            android:id="@+id/action_servicesFragment_to_buyGoldFragment"
            app:destination="@id/buyGoldFragment" />
    </fragment>
    <fragment
        android:id="@+id/transActionsFragment"
        android:name="com.example.shemsh.transAction.TransActionsFragment"
        android:label="fragment_trans_actions"
        tools:layout="@layout/fragment_trans_actions" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.shemsh.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/assetFragment"
        android:name="com.example.shemsh.asset.AssetFragment"
        android:label="fragment_asset"
        tools:layout="@layout/fragment_asset" />
    <fragment
        android:id="@+id/buyGoldFragment"
        android:name="com.example.shemsh.services.BuyGoldFragment"
        android:label="fragment_buy_gold"
        tools:layout="@layout/fragment_buy_gold" />
</navigation>