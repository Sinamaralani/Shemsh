<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".transAction.TransActionsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout7"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:background="@drawable/services_background"
            android:gravity="center_vertical"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/gold_ingot" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="قیمت حال حاضر یک سوت طلا"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="70,770 ریال"
                android:textAlignment="textEnd" />
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="104dp"
            android:layoutDirection="rtl"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            >

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:selectionRequired="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/everything_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:checked="true"
                    android:text="همه"
                    android:textAppearance="@style/ChipStyle"
                    android:textColor="#666666"
                    app:chipBackgroundColor="@color/white"
                    app:chipStrokeColor="@color/chip_boder_color"
                    app:chipStrokeWidth="1dp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/diposit_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="واریز"
                    android:textAppearance="@style/ChipStyle"
                    android:textColor="#666666"
                    app:chipBackgroundColor="@color/white"
                    app:chipStrokeColor="@color/chip_boder_color"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/pickedUp_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="برداشت"
                    android:textAppearance="@style/ChipStyle"
                    android:textColor="#666666"
                    app:chipBackgroundColor="@color/white"
                    app:chipStrokeColor="@color/chip_boder_color"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/buyGold_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="خرید طلا"
                    android:textAppearance="@style/ChipStyle"
                    android:textColor="#666666"
                    app:chipBackgroundColor="@color/white"
                    app:chipStrokeColor="@color/chip_boder_color"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/sellGold_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="فروش طلا"
                    android:textAppearance="@style/ChipStyle"
                    android:textColor="#666666"
                    app:chipBackgroundColor="@color/white"
                    app:chipStrokeColor="@color/chip_boder_color"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/getGold_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="دریافت طلا"
                    android:textAppearance="@style/ChipStyle"
                    android:textColor="#666666"
                    app:chipBackgroundColor="@color/white"
                    app:chipStrokeColor="@color/chip_boder_color"
                    app:chipStrokeWidth="1dp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/physical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="دریافت فیزیکی"
                    android:textAppearance="@style/ChipStyle"
                    android:textColor="#666666"
                    app:chipBackgroundColor="@color/white"
                    app:chipStrokeColor="@color/chip_boder_color"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/goldToGold_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="انتقال طلا به طلا"
                    android:textAppearance="@style/ChipStyle"
                    android:textColor="#666666"
                    app:chipBackgroundColor="@color/white"
                    app:chipStrokeColor="@color/chip_boder_color"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/installments_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="اقساط"
                    android:textAppearance="@style/ChipStyle"
                    android:textColor="#666666"
                    app:chipBackgroundColor="@color/white"
                    app:chipStrokeColor="@color/chip_boder_color"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/giftCard_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="کارت هدیه"
                    android:textAppearance="@style/ChipStyle"
                    android:textColor="#666666"
                    app:chipBackgroundColor="@color/white"
                    app:chipStrokeColor="@color/chip_boder_color"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/reward_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="پاداش"
                    android:textAppearance="@style/ChipStyle"
                    android:textColor="#666666"
                    app:chipBackgroundColor="@color/white"
                    app:chipStrokeColor="@color/chip_boder_color"
                    app:chipStrokeWidth="1dp" />

            </com.google.android.material.chip.ChipGroup>


        </HorizontalScrollView>

        <ImageView
            android:id="@+id/info_iv"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="116dp"
            android:src="@drawable/empty_status"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

        <TextView
            android:id="@+id/info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:text="تراکنشی برای نمایش وجود ندارد."
            android:textColor="#666666"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/info_iv" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>